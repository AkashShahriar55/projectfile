<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">


    <ScrollView
        android:id="@+id/addItemScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <TextView
                    style="@style/addItemDialogueTextView"
                    android:text="Select ingredient" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/spinnerLoading"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:visibility="gone" />

                    <Spinner
                        android:id="@+id/ingredientSpinner"

                        style="@style/addItemDialogueSpinner" />
                </LinearLayout>


                <TextView
                    style="@style/addItemDialogueTextView"
                    android:text="Canister" />

                <EditText
                    android:id="@+id/canisterEditText"
                    style="@style/addItemDialogueEditTextView"
                    android:hint="12" />

                <TextView
                    style="@style/addItemDialogueTextView"
                    android:text="Max Capacity" />


                <EditText
                    android:id="@+id/maxEditText"
                    style="@style/addItemDialogueEditTextView"
                    android:hint="200" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancelButton"
                    style="@style/addItemDialogueButton"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/deleteButton"
                    style="@style/addItemDialogueButton"
                    android:text="Delete"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/addButton"
                        style="@style/addItemDialogueButton"
                        android:text="Add"
                        />

                    <ProgressBar
                        android:id="@+id/loadingProgressBar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:layout_marginLeft="6dp"
                        android:translationZ="2dp"
                />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>