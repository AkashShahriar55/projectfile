<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/gradient1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Mode"
        android:translationZ="1dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:background="@color/colortransparent"
        android:id="@+id/driver_view_mode"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                android:id="@+id/rut_map_card">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/colorWhite"
                        android:padding="8dp"
                        android:id="@+id/driver_add_image_layout">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Necessary Images"
                            android:gravity="start"
                            android:layout_weight="2"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_shape"
                            android:text="Add"
                            android:backgroundTint="@color/colorLightCard"
                            android:textColor="@color/colorhighlight"
                            android:id="@+id/driver_add_image"
                            android:layout_weight="1"
                            />
                    </LinearLayout>
                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewPagerDriver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:foregroundGravity="top"
                        android:overScrollMode="never"
                        android:background="@color/colorLightCard">
                    </android.support.v4.view.ViewPager>


                </LinearLayout>


            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Driver Info"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="@color/colorWhite">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Name:"
                                android:textColor="@color/colorBar" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Address:"
                                android:textColor="@color/colorBar" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Id number:"
                                android:textColor="@color/colorBar" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="SS no:"
                                android:textColor="@color/colorBar" />



                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Working hours:"
                                android:textColor="@color/colorBar" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Password:"
                                android:textColor="@color/colorBar" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/round_shape"
                                android:backgroundTint="@color/colorLightCard"
                                android:textSize="16sp"
                                android:id="@+id/driver_edttxt_name"
                                android:hint="e.g. Morphy"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/colorGrayDark"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/round_shape"
                                android:backgroundTint="@color/colorLightCard"
                                android:textSize="16sp"
                                android:id="@+id/driver_edttxt_address"
                                android:hint="e.g. 8500 Beverly Blvd, Los Angeles, CA 90048, USA"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/colorGrayDark"
                                android:singleLine="true"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/round_shape"
                                android:backgroundTint="@color/colorLightCard"
                                android:textSize="16sp"
                                android:hint="e.g. 111111111"
                                android:paddingLeft="5dp"
                                android:id="@+id/driver_edttxt_id"
                                android:paddingRight="5dp"
                                android:textColor="@color/colorGrayDark"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/round_shape"
                                android:backgroundTint="@color/colorLightCard"
                                android:textSize="16sp"
                                android:id="@+id/driver_edttxt_ssn"
                                android:textColor="@color/colorGrayDark"
                                android:hint="e. g. 111111111"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:singleLine="true"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/round_shape"
                                android:textSize="16sp"
                                android:backgroundTint="@color/colorLightCard"
                                android:id="@+id/driver_edttxt_wh"
                                android:hint="HH-MM"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/colorGrayDark"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/round_shape"
                                android:textSize="16sp"
                                android:backgroundTint="@color/colorLightCard"
                                android:id="@+id/driver_edttxt_pass"
                                android:hint="e.g. Abc123"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/colorGrayDark"/>



                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/round_shape"
                    android:text="Edit"
                    android:textColor="@color/colorhighlight2"
                    android:id="@+id/driver_button_add"
                    android:layout_margin="10dp"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/round_shape"
                    android:text="Delete"
                    android:textColor="@color/colorred"
                    android:id="@+id/driver_button_cancel"
                    android:layout_margin="10dp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
